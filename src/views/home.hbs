  <label class="form__label" for="weight">Bodyweight (kg)</label>
  <input class="form__input" id="weight" type="number" name="bodyweight" placeholder="100">
  <div class="form__group">
    <input class="form__input--radio" id="male" type="radio" name="sex" value="m" checked>
    <label class="form__label form__btn" id="radio1" for="male">Male</label>
    <input class="form__input--radio" id="female" type="radio" name="sex" value="f">
    <label class="form__label form__btn" id="radio2" for="female">Female</label>
  </div>
  <label class="form__label" for="name">Snatch (kg)</label>
  <input class="form__input" id="snatch" type="text" name="snatch" placeholder="180">
  <label class="form__label" for="clean_jerk">Clean &amp; Jerk (kg)</label>
  <input class="form__input" id="clean_jerk" type="text" name="clean_jerk" placeholder="230">
  <button class="form__btn" type="submit" name="submit">Submit</button>
</form>
